{
  "name": "realtime-chat-application",
  "version": "1.0.0",
  "description": "A modern real-time chat application with React, TypeScript, and Express",
  "main": "server/index.ts",
  "scripts": {
    "dev": "node dev-server.mjs",
    "build": "tsc && vite build client --outDir ../dist/client",
    "start": "node dist/server/index.js",
    "server": "tsx server/index.ts",
    "client": "vite client --port 3000 --host 0.0.0.0",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "chat",
    "realtime",
    "messaging",
    "react",
    "typescript",
    "express",
    "websockets",
    "communication"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "wouter": "^3.7.1",
    "@tanstack/react-query": "^5.82.0",
    "lucide-react": "^0.525.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.19",
    "@types/node": "^24.0.13",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "tsx": "^4.20.3",
    "vite": "^6.3.5",
    "eslint": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20"
  }
}